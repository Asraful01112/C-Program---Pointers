#include <stdio.h>

void swap_temp(int *a, int *b);
void swap_no_temp(int *a, int *b);
void swap_pointer(int *a, int *b);

int main() {
    int a, b, choice;

    printf("Enter two numbers: ");
    scanf("%d %d", &a, &b);

    printf("\nChoose Swap Method:\n");
    printf("1. Swap using temporary variable\n");
    printf("2. Swap without temporary variable\n");
    printf("3. Swap using pointers\n");
    printf("Enter choice: ");
    scanf("%d", &choice);

    printf("\nBefore swapping: a = %d, b = %d\n", a, b);

    switch(choice) {
        case 1:
            swap_temp(&a, &b);
            break;

        case 2:
            swap_no_temp(&a, &b);
            break;

        case 3:
            swap_pointer(&a, &b);
            break;

        default:
            printf("Invalid choice!\n");
            return 0;
    }

    printf("After swapping:  a = %d, b = %d\n", a, b);

    return 0;
}

void swap_temp(int *a, int *b) {
    int temp = *a;
    *a = *b;
    *b = temp;
}

void swap_no_temp(int *a, int *b) {
    *a = *a + *b;
    *b = *a - *b;
    *a = *a - *b;
}

void swap_pointer(int *a, int *b) {
    int temp = *a;
    *a = *b;
    *b = temp;
}
